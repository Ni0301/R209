{% extends 'base.html.twig' %}

{% block title %}VieNote index{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Liste des modifications de notes</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Note concernée</th>
                <th>Créateur</th>
                <th>Date de modification</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vie_note in vie_notes %}
            <tr>
                <td>{{ vie_note.id }}</td>
                <td>{{ vie_note.description }}</td>
                <td>{{ vie_note.note.titre }}</td>
                <td>{{ vie_note.createur.prenom }} {{ vie_note.createur.non }}</td>
                <td>{{ vie_note.updatedAt ? vie_note.updatedAt|date('d/m/Y H:i:s') : '' }}</td>
                <td>
                    <a href="#" class="btn btn-sm btn-primary">Voir</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucune modification trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_vienote_new') }}" class="btn btn-success">Créer une nouvelle modification</a>
</div>
{% endblock %}