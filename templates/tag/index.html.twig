{% extends 'base.html.twig' %}

{% block title %}Tag index{% endblock %}

{% block body %}
    <h1>Tag</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.id }}</td>
                <td>{{ tag.nom }}</td>
                <td>
                    <a href="{{ path('app_tag_show', {'id': tag.id}) }}">show</a>
                    <a href="{{ path('app_tag_edit', {'id': tag.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="action-buttons">
        <a href="{{ path('app_tag_new') }}" class="btn-create">
            <svg class="icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                <line x1="12" y1="8" x2="12" y2="16" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                <line x1="8" y1="12" x2="16" y2="12" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
            Create new
        </a>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .action-buttons {
            margin-top: 2rem;
            display: flex;
            justify-content: center;
        }
        
        .btn-create {
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.875rem 2rem;
            background: linear-gradient(135deg, #5DADE2 0%, #3498DB 100%);
            color: white;
            text-decoration: none;
            border-radius: 50px;
            font-size: 1rem;
            font-weight: 500;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(93, 173, 226, 0.4);
            position: relative;
            overflow: hidden;
        }
        
        .btn-create::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.2);
            transition: left 0.3s ease;
        }
        
        .btn-create:hover::before {
            left: 100%;
        }
        
        .btn-create:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(93, 173, 226, 0.5);
        }
        
        .btn-create:active {
            transform: translateY(0);
            box-shadow: 0 2px 10px rgba(93, 173, 226, 0.4);
        }
        
        .btn-create .icon {
            width: 20px;
            height: 20px;
            transition: transform 0.3s ease;
        }
        
        .btn-create:hover .icon {
            transform: rotate(90deg);
        }
        
        /* Style pour am√©liorer le tableau aussi */
        .table {
            width: 100%;
            margin-top: 1.5rem;
            border-collapse: collapse;
            background: white;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        }
        
        .table th {
            background-color: #f8f9fa;
            padding: 1rem;
            text-align: left;
            font-weight: 600;
            color: #2c3e50;
            border-bottom: 2px solid #e9ecef;
        }
        
        .table td {
            padding: 1rem;
            border-bottom: 1px solid #e9ecef;
        }
        
        .table tbody tr:hover {
            background-color: #f8f9fa;
        }
        
        .table tbody tr:last-child td {
            border-bottom: none;
        }
        
        .table a {
            color: #5DADE2;
            text-decoration: none;
            margin-right: 1rem;
            font-weight: 500;
            transition: color 0.2s ease;
        }
        
        .table a:hover {
            color: #3498DB;
            text-decoration: underline;
        }
        
        h1 {
            color: #2c3e50;
            margin-bottom: 2rem;
            text-align: center;
            font-weight: 300;
            font-size: 2.5rem;
        }
        
        /* Responsive */
        @media (max-width: 768px) {
            .table {
                font-size: 0.875rem;
            }
            
            .table th, .table td {
                padding: 0.75rem 0.5rem;
            }
            
            .btn-create {
                padding: 0.75rem 1.5rem;
                font-size: 0.9rem;
            }
            
            .btn-create .icon {
                width: 18px;
                height: 18px;
            }
        }
    </style>
{% endblock %}